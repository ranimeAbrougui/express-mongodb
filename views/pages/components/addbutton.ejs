<button
  type="button"
  class="btn btn-primary m-2"
  data-bs-toggle="modal"
  data-bs-target="#exampleModal"
>
  <i class="fas fa-plus"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/" method="post">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">add office</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col">
              <!-- title input -->
              <div class="form-outline">
                <input
                  type="text"
                  class="form-control"
                  placeholder="title"
                  required
                  name="title"
                />
              </div>
            </div>
            <div class="col">
              <!-- source input -->
              <div class="form-outline">
                <input
                  type="text"
                  required
                  class="form-control"
                  placeholder="source"
                  name="source"
                />
              </div>
            </div>
          </div>

          <hr />

          <div class="row">
            <div class="col">
              <!-- link input -->
              <div class="form-outline">
                <input
                  type="text"
                  class="form-control"
                  placeholder="link"
                  name="link"
                />
              </div>
            </div>
            <div class="col">
              <!-- description input -->
              <div class="form-outline">
                <input
                  type="text"
                  class="form-control"
                  placeholder="description"
                  name="description"
                />
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

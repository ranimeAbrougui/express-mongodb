<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="text-center">
        <!-- Button trigger modal -->
        <%- include("./components/addbutton.ejs") %>
      </div>
      <!-- on peut mettre auto au lieu de 3 mais il va la deviser selon la page  -->

      <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2">
        <!-- card -->
        <% images.forEach((image)=>{ %>
        <div class="col">
          <div class="card mx-auto mb-2 shadow-lg" style="width: 18rem">
            <div class="card-header">
              <button class="btn btn-sm btn-primary mx-2">
                <i class="fas fa-trash"></i></button
              ><button class="btn btn-sm btn-primary">
                <i class="fas fa-pen"></i>
              </button>
            </div>

            <img src="<%= image.source %>" class="card-img-top" alt="..." />
            <div class="card-body d-flex justify-content-between">
              <h5 class="card-title text-muted"><%= image.title %></h5>

              <a href="#" class="btn btn-primary btn-sm text-uppercase"
                >see openings</a
              >
            </div>
          </div>
        </div>

        <% }) %>

        <!-- fin card -->
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

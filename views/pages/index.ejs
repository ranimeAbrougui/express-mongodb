<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="text-center">
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary m-2"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          <i class="fas fa-plus"></i>
        </button>

        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">add office</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col">
                    <!-- title input -->
                    <div class="form-outline">
                      <input
                        type="text"
                        id="form8Example1"
                        class="form-control"
                        placeholder="title"
                      />
                    </div>
                  </div>
                  <div class="col">
                    <!-- source input -->
                    <div class="form-outline">
                      <input
                        type="text"
                        id="form8Example2"
                        class="form-control"
                        placeholder="source"
                      />
                    </div>
                  </div>
                </div>

                <hr />

                <div class="row">
                  <div class="col">
                    <!-- link input -->
                    <div class="form-outline">
                      <input
                        type="text"
                        id="form8Example3"
                        class="form-control"
                        placeholder="link"
                      />
                    </div>
                  </div>
                  <div class="col">
                    <!-- description input -->
                    <div class="form-outline">
                      <input
                        type="text"
                        id="form8Example4"
                        class="form-control"
                        placeholder="description"
                      />
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="button" class="btn btn-primary">Save</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- on peut mettre auto au lieu de 3 mais il va la deviser selon la page  -->

      <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2">
        <!-- card -->
        <% images.forEach((image)=>{ %>
        <div class="col">
          <div class="card mx-auto mb-2 shadow-lg" style="width: 18rem">
            <div class="card-header">
              <button class="btn btn-sm btn-primary mx-2">
                <i class="fas fa-trash"></i></button
              ><button class="btn btn-sm btn-primary">
                <i class="fas fa-pen"></i>
              </button>
            </div>

            <img src="<%= image.source %>" class="card-img-top" alt="..." />
            <div class="card-body d-flex justify-content-between">
              <h5 class="card-title text-muted"><%= image.title %></h5>

              <a href="#" class="btn btn-primary btn-sm text-uppercase"
                >see openings</a
              >
            </div>
          </div>
        </div>

        <% }) %>

        <!-- fin card -->
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
